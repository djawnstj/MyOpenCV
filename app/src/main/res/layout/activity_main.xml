<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/convertImageBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이미지 변환" />

            <Button
                android:id="@+id/convertBinaryBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이미지 이진화" />

            <Button
                android:id="@+id/drawingImageBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이미지 위에 그리기" />


            <Button
                android:id="@+id/detectCannyBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="외곽선 추출" />

            <Button
                android:id="@+id/setBrightnessBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이미지 밝기 조절" />

            <Button
                android:id="@+id/getDiffOperationBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="두 이미지 간 차이 구하기" />

            <Button
                android:id="@+id/extractFragmentBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="색상 추출" />

        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/fragmentView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3" />

</LinearLayout>